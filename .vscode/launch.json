{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Try Langchains",
            "consoleTitle": "Try Langchains",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceRoot}/cli.py",
            "env": {
                "PYTHONPATH": "."
            },
            "args": [
                "translate_text_to",
                "slovak", // language
                "LangChain is a framework for developing applications powered by large language models (LLMs)." // text
            ],
            "justMyCode": false,
            "envFile": "${workspaceFolder}/.env",
        },
        {
            "name": "Debug FastAPI",
            "consoleTitle": "Debug FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "hbit_api.main:app",
                "--reload"
            ],
            "cwd": "${workspaceFolder}",
            "jinja": true,
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": false,
        },
        {
            "name": "Debug PyTest",
            "consoleTitle": "Debug PyTest",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "hbit_api/tests"
            ],
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": false,
        },
        {
            "name": "Init DB Data",
            "consoleTitle": "Init DB Data",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/hbit_api/cli.py",
            "args": [
                "init_db_data"
            ],
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "."
            },
            "justMyCode": false,
        },
    ]
}